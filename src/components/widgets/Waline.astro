---
// Waline.astro
const { path } = Astro.props;
---

<!-- Waline 挂载点 -->
<div id="waline"></div>

<!-- 引入 Waline 样式 -->
<link
  rel="stylesheet"
  href="https://unpkg.com/@waline/client@v2/dist/waline.css"
/>

<!-- 初始化 Waline -->
<script type="module">
  import { init } from "https://unpkg.com/@waline/client@v2/dist/waline.mjs";

  // 初始化 Waline
  init({
    el: "#waline", // 挂载到的 DOM 元素
    serverURL: "https://www.sixdayc.xyz", // 替换为你的 Waline 服务器地址
    path: "{path}", // 动态路径
    lang: "zh-CN", // 设置语言为中文
    dark: 'html[data-theme="dark"]', // 支持深色模式（可选）
  });
</script>
