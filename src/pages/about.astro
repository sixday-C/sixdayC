---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
import Card from "@/components/temple/Card.astro";
import LinkCard from "@/components/mdx/LinkCard.astro";
---

<BaseLayout title="About">
  <MainCard
    title="About sixdayC"
    description="意识到会不说再见地离别，才学会珍惜生命的每一天。"
    textOverlay="ABOUT"
    infoIcon="lucide:user"
  >
    <div>
      <Icon name="lucide:quote" class="w-10 h-10 text-primary mb-4" />
      <blockquote class="text-lg text-base-content/80 max-w-3xl mb-4">
        <p>意识到会不说再见地离别，才学会珍惜生命的每一天。</p>
        <footer class="mt-4 text-right">—— SunMaple</footer>
      </blockquote>
    </div>
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section
        class="flex flex-col md:flex-row gap-8 items-center md:items-start"
      >
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img
              src="profile.webp"
              alt="SunMaple"
              width="160"
              height="160"
              loading="eager"
            />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">sixdayC</h1>
          <p class="text-xl text-base-content/80 mb-4">
            infp 足球 阅读 科幻 自由学习 cs Anki.
          </p>

          <div
            class="flex flex-wrap gap-3 justify-center md:justify-start mb-6"
          >
            <a
              href="https://github.com/sixday-C"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
          </div>

          <p class="text-base-content/80">
            你好！我是
            sixdayC，目前大一在读，这里是我的个人博客，用来记录一切我想记录的东西。
          </p>
        </div>
      </section>

      <!-- Contribution Activity -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:activity" class="w-6 h-6 text-primary" />
          <span>Recent Activity</span>
        </h2>

        <div class="bg-base-200 rounded-xl p-6 overflow-x-auto">
          <div
            class="flex flex-col md:flex-row gap-8 md:gap-4 md:overflow-x-auto md:pb-2"
          >
            {
              [
                {
                  date: "April 2025",
                  title: "MY BLOG",
                  desc: "创建了我的小站，用来珍惜生命的每一天",
                },
                {
                  date: "March 2025",
                  title: "第一个完整的团队游戏",
                  desc: "806-GD的小伙伴们一起开发了《神州物理录》",
                },
              ].map((item, i) => (
                <div class="relative flex gap-4 pb-2 md:pb-0 md:min-w-[250px]">
                  <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-content text-xl">
                      {i + 1}
                    </div>
                    <div class="w-0.5 h-16 bg-base-300 mt-2 md:hidden" />
                  </div>
                  <div>
                    <div class="text-sm text-base-content/60 mb-1">
                      {item.date}
                    </div>
                    <h3 class="text-lg font-bold">{item.title}</h3>
                    <p class="text-base-content/80 mt-1">{item.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>
      <Card class="p-6 mt-8 bg-base-200 shadow-md">
        <div class="flex flex-col items-center text-center">
          <LinkCard
            title="我的博客"
            desc="查看我的博客文章"
            url="https://www.sixdayc.top/blog"
            icon="lucide:book"
          />
        </div>
      </Card>
    </div>
  </MainCard>
</BaseLayout>
