---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import LinkCard from "@/components/mdx/LinkCard.astro";
import FriendCard from "@/components/mdx/FriendCard.astro";
---

<BaseLayout title="Friends">
  <MainCard
    title="Friends & Resources"
    description="待添加~"
    textOverlay="FRIENDS"
    infoIcon="lucide:link"
  >
    <div class="space-y-10">
      <!-- Friends Section -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:users" class="w-6 h-6 text-primary" />
          <span>Friends</span>
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          <FriendCard
            name="SunMaple"
            avatar="https://github.com/EveSunMaple.png"
            description="Coding is my hobby, not my career."
            url="https://github.com/EveSunMaple"
            type="friend"
          />
          <FriendCard
            name="Nelson"
            avatar="https://github.com/bosswnx.png"
            description="一直游到海水變藍."
            url="https://nelsonboss.ink/"
            type="friend"
          />
          <FriendCard
            name="DM-X~X~X"
            avatar="https://github.com/dmx20070206.png"
            description="理论可行，实践开始."
            url="https://dmx20070206.github.io/"
            type="friend"
          />
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
