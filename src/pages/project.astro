---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
import RepositoryCard from "@/components/mdx/RepositoryCard.astro";
---

<BaseLayout title="Projects">
  <MainCard
    title="Projects"
    description="A showcase of my projects and contributions on GitHub."
    textOverlay="PROJECTS"
    infoIcon="lucide:code-2"
  >
    <!-- Featured Projects -->
    <section class="py-4">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <Icon name="lucide:star" class="w-6 h-6 text-primary" />
        <span>Projects</span>
      </h2>

      <GitHubStats
        username="sixday-C"
        repositoryName="2025_4C"
        showLanguages={true}
        showContributors={true}
      />
    </section>

    <!-- My Repositories -->
    <section class="py-4">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <Icon name="lucide:folder" class="w-6 h-6 text-primary" />
        <span>My Repositories</span>
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <RepositoryCard repo="sixday-C/sixdayC" />
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <RepositoryCard repo="sixday-C/cat_snake" />
      </div>

      <div class="flex justify-center mt-10">
        <a
          href="https://github.com/sixday-C?tab=repositories"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-outline gap-2"
        >
          <Icon name="lucide:github" class="w-5 h-5" />
          <span>View More on GitHub</span>
        </a>
      </div>
    </section>
  </MainCard>
</BaseLayout>
